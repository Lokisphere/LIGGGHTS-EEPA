##################################################

#EEPA model:two particles colliding - by Lokeshwar Mahto

##################################################

atom_style		granular
atom_modify		map array
boundary		f f f
newton			off

communicate		single vel yes
echo 			both
units			si

region			reg block -0.05 0.05 -0.05 0.05 0. 0.15 units box
create_box		1 reg

neighbor		0.0005 bin
neigh_modify	delay 0


#Material properties required for new pair styles

fix 		m1 all property/global youngsModulus peratomtype 5.7e6
fix 		m2 all property/global poissonsRatio peratomtype 0.25
fix 		m3 all property/global coefficientRestitution peratomtypepair 1 0.5
fix 		m4 all property/global coefficientFriction peratomtypepair 1 0.245
fix		m5 all property/global coefficientRollingFriction peratomtypepair 1 0.05
fix    	m6 all property/global UnloadingStiffness peratomtypepair 1 3
fix		m7 all property/global adhesionExponent scalar 1
fix		m8 all property/global overlapExponent scalar 1.
fix		m9 all property/global pullOffForce peratomtypepair 1 -0.00005
fix		m10 all property/global surfaceEnergy peratomtypepair 1 1
fix		m11 all property/global tangentialMultiplier peratomtypepair 1 0.667

#New pair style
pair_style gran model eepa tangential eepa rolling_friction eepa
pair_coeff	* *

timestep	0.000005

fix			gravi all gravity 0 vector -1.0 0.0 0.0

create_atoms 1 single -0.005 0 0
set atom 1 vx 3 diameter 0.001 density 2500

create_atoms 1 single 0.005 0 0  
set atom 2 vx -3 diameter 0.001 density 2500

compute 	DeltaOver all pair/gran/local delta
compute		avgdelta all reduce ave c_DeltaOver[1]
variable        Overlap equal c_avgdelta


compute		forceXdir all property/atom fx
variable	fd equal c_forceXdir[2]


#apply nve integration to all particles that are inserted as single particles
fix		integr all nve/sphere

#output settings, include total thermal energy
fix				ts all check/timestep/gran 1000 0.1 0.1
compute			rke all erotate/sphere
thermo_style	custom step atoms ke c_rke f_ts[1] f_ts[2] vol v_fd v_Overlap
thermo			1000
thermo_modify	lost ignore norm no

fix extra all print 1 "${Overlap} ${fd}" file forceDisplacement.txt

#insert the first particles so that dump is not empty
run			1
dump		dmp all custom/vtk 10 post/edinburghFD*.vtk id type type x y z ix iy iz vx vy vz fx fy fz omegax omegay omegaz radius


run			10000 upto


